extends layout
block content
      
    .maincontent
        .formHold
          h1.itemtitle photo details
          each photo in indOne
            img.detailimage(src="http://isabellebidou.com/images/"+photo.name, alt="photo.name")
            form.detailform(method = "post")
              fieldset
                label(for=  "name") name:
                input(name=  "name", type = "text", value = photo.name) 
                label(for=  "thumbnail") thumbnail:
                input(name=  "thumbnail", type = "text", value = photo.thumbnail) 
                label(for=  "category") category:
                input(name=  "category", type = "text", value = photo.category) 
                label(for=  "country") country:
                input(name=  "country", type = "text", value = photo.country)
                label(for=  "place") place:
                input(name=  "place", type = "text", value = photo.place) 
                label(for=  "year") year:
                input(name=  "year", type = "text", value = photo.year) 
                label(for=  "comments") comments:
                input(name=  "comments", type = "text", value = photo.comments) 
                label(for=  "tags") tags:
                input(name=  "tags", type = "text", value = photo.tags) 
                
                br
                button.button(type="submit", class = "submit") Update
                