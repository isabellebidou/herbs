    script.

      $(window).resize(function(){location.reload();console.log("resized");}); 
      $(document).ready(function() {
      $("#menubutton").mousin(function() {
      $("#mobilemenu").show();
      });
      });
      $(document).ready(function() {
      $("#mobilemenu").hide();
      });
      $(document).ready(function() {
      $(".mobilemenuli,#menubutton").click(function(){
      $("#mobilemenu").slideToggle();
      });
      });
      
      
                     

      

