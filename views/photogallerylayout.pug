    #container
      .header
        .imhold
          img#logo.logoimg(alt='logo', src='/seagul.png')

        a(href="/").logo.h1.headertitle isabellebidou.com 
        if isAuthenticated
              p.username You're logged in as #{session.user.userFirstName} 
              
              unless userRole == "student" 
              p.userrole  #{user.userRole}
