extends layout
block content
      
    .maincontent
        .formHold
          h1.itemtitle photo details
          each photo in indOne
            img.detailimage(src="http://isabellebidou.com/images/"+photo.name, alt="photo.name")
            form.detailform(method = "post")
              fieldset
                label(for= "newname") name:
                input(name= "newname", type = "text", value = photo.name) 
                label(for= "newthumbnail") thumbnail:
                input(name= "newthumbnail", type = "text", value = photo.thumbnail) 
                label(for= "newcategory") category:
                input(name= "newcategory", type = "text", value = photo.category) 
                label(for= "newcountry") country:
                input(name= "newcountry", type = "text", value = photo.country)
                label(for= "newplace") place:
                input(name= "newplace", type = "text", value = photo.place) 
                label(for= "newyear") year:
                input(name= "newyear", type = "text", value = photo.year) 
                label(for= "newcomments") comments:
                input(name= "newcomments", type = "text", value = photo.comments) 
                label(for= "newtags") tags:
                input(name= "newtags", type = "text", value = photo.tags) 
                
                br
                button.button(type="submit", class = "submit") Update
                