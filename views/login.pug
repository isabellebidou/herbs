extends layout
block navigation
       div.authentication
        a.home(href='/') home
        a.registerbutton(href='/register') register
        a.togallerybutton(href='/') to gallery 
       button#menubutton
            | menu
            div#mobilemenu
                ul#mobilemenuul
                    li
                    a.mobilemenuli(href='/') home
                    li
                    a.mobilemenuli(href='/register') register
                        
                    li
                    a.mobilemenuli(href='/') to gallery         
                        
                     
       script.
              $(document).ready(function() {
              $("#menubutton").click(function(){
              $("#mobilemenu").slideToggle();
              });
              });

block content
      .maincontent
       if messages
        if messages.error
         div #{messages.error}
       form#login(action='/login', method='post')
        fieldset
                  legend login details
                  ul
                   li.div
                    label email:
                    input(type='text', name='email')
                   li.div
                    label Password:
                    input(type='password', name='password')
                   li.div
                    input.submit(type='submit', value='Log In')
